{
  "name": "bettadayz-pbbg",
  "version": "2.0.0",
  "description": "BettaDayz Persistent Browser-Based Game with dual domain support",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:shop": "next dev -p 3000",
    "dev:store": "next dev -p 3001",
    "build": "next build",
    "build:shop": "NEXT_PUBLIC_DOMAIN=bettadayz.shop next build",
    "build:store": "NEXT_PUBLIC_DOMAIN=bettadayz.store next build",
    "start": "next start",
    "lint": "npx eslint . --ext .js,.ts,.jsx,.tsx --max-warnings 5000",
    "lint:fix": "npx eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "ci": "npm run build && npm run test && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "db:generate": "supabase gen types typescript --project-id YOUR_PROJECT_ID > lib/supabase/types.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up",
    "deploy:shop": "npm run build:shop && npm run deploy:hostinger:shop",
    "deploy:store": "npm run build:store && npm run deploy:hostinger:store",
    "deploy:hostinger:shop": "rsync -avz --delete out/ hostinger_shop:public_html/",
    "deploy:hostinger:store": "rsync -avz --delete out/ hostinger_store:public_html/",
    "deploy:gh-pages": "npm run build",
    "deploy:vercel": "vercel --prod",
    "deploy:cloudflare": "npm run build && wrangler pages deploy out",
    "db:push": "echo 'Run supabase/schema.sql in your Supabase dashboard'",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@next/third-parties": "^14.1.0",
    "@stripe/stripe-js": "^3.0.6",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.77.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "crypto-browserify": "^3.12.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.15.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.462.0",
    "next": "16.0.0",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "^2.13.3",
    "stream-browserify": "^3.0.0",
    "stripe": "^17.7.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.180.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supabase": "^1.142.2",
    "three": "^0.180.0",
    "typescript": "^5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "lib/**/*.{js,jsx,ts,tsx}",
      "app/**/*.{js,jsx,ts,tsx}",
      "components/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/BettaDayzPBBG.git"
  },
  "keywords": [
    "game",
    "pbbg",
    "nextjs",
    "react",
    "supabase",
    "cryptocurrency",
    "gaming",
    "marketplace"
  ],
  "author": "BettaDayz Team",
  "license": "MIT"
}
