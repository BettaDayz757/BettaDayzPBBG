# ============================================================================
# File Upload Configuration
# ============================================================================
# Local file storage for XAMPP
UPLOAD_DIR=d:/bettadayzweb/xampp/htdocs/bettadayz/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============================================================================
# Cache Configuration
# ============================================================================
# Redis (if using Redis for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================================================
# Game Configuration
# ============================================================================
# Game-specific settings
GAME_TICK_RATE=1000
GAME_AUTO_SAVE_INTERVAL=30000
GAME_MAX_PLAYERS=10000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log
ENABLE_CONSOLE_LOGS=true

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_PAYMENTS=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true

# ============================================================================
# Development Tools
# ============================================================================
# Enable React DevTools
NEXT_TELEMETRY_DISABLED=1

# Enable detailed error pages
SHOW_ERROR_DETAILS=true

# Hot reload settings
FAST_REFRESH=true

# ============================================================================
# XAMPP-Specific Settings
# ============================================================================
# XAMPP installation directory
XAMPP_ROOT=d:/bettadayzweb/xampp
HTDOCS_PATH=d:/bettadayzweb/xampp/htdocs/bettadayz

# Apache settings
APACHE_PORT=80
APACHE_SSL_PORT=443

# MySQL settings
MYSQL_PORT=3306
PHPMYADMIN_URL=http://localhost/phpmyadmin

# ============================================================================
# Build Configuration
# ============================================================================
# Next.js build settings
NEXT_BUILD_OUTPUT=export
ANALYZE_BUNDLE=false

# ============================================================================
# Testing
# ============================================================================
# Test database
# TEST_DATABASE_URL=mysql://root:@localhost:3306/bettadayz_test

# ============================================================================
# Security (Development Only)
# ============================================================================
# These are relaxed for local development
# NEVER use these settings in production

# Disable HTTPS requirement
FORCE_HTTPS=false

# Allow insecure cookies
SECURE_COOKIES=false

# Disable CSRF protection for testing
DISABLE_CSRF=true

# Allow all origins (local development only)
ALLOW_ALL_ORIGINS=true

# ============================================================================
# Notes
# ============================================================================
# 1. Copy this file to .env.local before using
# 2. Replace all placeholder values with your actual values
# 3. NEVER commit .env.local to version control
# 4. Generate secure random secrets for production
# 5. Keep development and production environments separate
# 6. Use different API keys for development and production
# 7. For production settings, see .env.production.example
