{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "app/entry.client.tsx",
    "app/entry.server.tsx", 
    "app/root.tsx",
    "app/routes",
    "app/api/payments/stripe/webhook",
    "entry.client.tsx",
    "entry.server.tsx",
    "root.tsx",
    "_index.tsx",
    "load-context.ts",
    "middleware-loader.entry.ts",
    "vite.config.ts",
    ".wrangler",
    "**/*.remix.*"
  ]
}
