NEXT_PUBLIC_STORE_DOMAIN=bettadayz.store

# ======================================
# GAME CONFIGURATION
# ======================================

# BettaBuckZ Currency Settings
BETTABUCKZ_EXCHANGE_RATE=100  # 1 USD = 100 BettaBuckZ
BETTABUCKZ_MIN_PURCHASE=500   # Minimum purchase amount

# Game Settings
MAX_GUILD_MEMBERS=50
TOURNAMENT_ENTRY_FEE=1000     # In BettaBuckZ
DAILY_LOGIN_BONUS=100         # In BettaBuckZ

# ======================================
# SECURITY
# ======================================

# Rate Limiting
